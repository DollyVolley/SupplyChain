<template>
    <div class="container-fluid">
          <div>
            <label>
            </label>
          </div>
            <app-twincard class="float"
                v-for="(item, i) in $parent.twins"
                v-bind:twin="item"
                v-bind:key="i"
                :class="{active: i === $parent.activeItem}"
                @click.native="select(i)"
            ></app-twincard>
    </div>
</template>

<script>
export default {
  props: ["twin"],
  methods: {
    select: function(i) {
      console.debug("Selected Twdin Index: " + i)
      this.$parent.activeItem = i;
    },

  }
}
</script>

